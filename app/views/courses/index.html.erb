<h1>Courses#index</h1>
<br/>
<!-- This example requires Tailwind CSS v2.0+ -->
<ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">

  <% @courses.each do |course| %>
    <li class="col-span-1 flex flex-col text-center bg-white rounded-lg shadow divide-y divide-gray-200">
      <div class="flex-1 flex flex-col p-8">
        <img class="flex-shrink-0 mx-auto rounded-2xl" src="<%= url_for(course.poster) %>" alt="">
        <h3 class="mt-6 text-gray-900 text-sm font-medium"><%= course.title %></h3>
        <dl class="mt-1 flex-grow flex flex-col justify-between">
          <dd class="text-gray-500 text-sm">Paradigm Representative</dd>
          <dd class="mt-3">
            <span class="px-2 py-1 text-green-800 text-xs font-medium bg-green-100 rounded-full"><%= course.course_category.name %></span>
          </dd>
        </dl>
      </div>
      <div>
        <div class="-mt-px flex divide-x divide-gray-200">
          <div class="-ml-px w-0 flex-1 flex">
            <a href="<%= course_path(course) %>"
               class="relative -mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-bl-lg hover:text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="ml-3">상세보기</span>
            </a>
          </div>
          <div class="-ml-px w-0 flex-1 flex">
            <a href="<%= "#{course.path}01/#{course.course_chapters.first.file_prefix}01.html" %>"
               onclick="window.open(this.href, '_blank', 'width=<%= course.width %>, height=<%= course.height %>, top=100, left=100'); return false;"
               class="relative w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-br-lg hover:text-gray-500">
              <!-- Heroicon name: solid/phone -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="ml-3">맛보기</span>
            </a>
          </div>
        </div>
      </div>
    </li>
  <% end %>

  <!-- More people... -->
</ul>
