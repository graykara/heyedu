<p style="color: green"><%= notice %></p>

<%= render 'shared/post_menu' %>

<%= render @post %>

<div class="flex pt-5">
  <div class="justify-start">
    <%= link_to "목록", eval("#{@category}_posts_path"), type: "button", class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
    <%= link_to "수정", eval("edit_#{@category}_post_path(@post)"), type: "submit", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
  </div>
  <div class="justify-end">
    <%= button_to "삭제", eval("#{@category}_post_path(@post)"), method: :delete, type: "button", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500"%>
  </div>
</div>
